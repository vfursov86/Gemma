<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GemmaDesktop.Views.MainWindow"
        Title="Gemma Desktop" Width="600" Height="800"
        Icon="/Assets/gemma.png">

  <Grid RowDefinitions="*,Auto">
    
    <!-- Chat History -->
    <ScrollViewer Grid.Row="0">
      <StackPanel x:Name="ChatPanel"/>
    </ScrollViewer>

    <!-- Input + Buttons -->
    <StackPanel Grid.Row="1" Margin="5">
      <TextBlock x:Name="StatusLabel"
           Text=""
           FontStyle="Italic"
           Foreground="Gray"
           Margin="5"
           HorizontalAlignment="Left"/>
      <TextBox x:Name="InputBox"
               AcceptsReturn="True"
               TextWrapping="WrapWithOverflow"
               ScrollViewer.VerticalScrollBarVisibility="Hidden"
               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
               MinHeight="100"
               MaxLines="5"
               />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
        <Button Content="Send" Click="OnSendClick" Width="100" Margin="5"/>
        <Button Content="Exit" Click="OnExitClick" Width="100" Margin="5"/>
      </StackPanel>
    </StackPanel>

  </Grid>
</Window>

